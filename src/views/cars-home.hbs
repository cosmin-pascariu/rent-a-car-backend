<!DOCTYPE html>
<html lang='en'>
<head>
  <meta charset='UTF-8' />
  <title>Home</title>
  <style>

    body{
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background: #f4f4f4;
      height: 100vh;}
    /* Add some basic styling for the navigation bar */
    .navbar {
      overflow: hidden;
      background-color: #333;
      font-family: Arial, sans-serif;
    }

    /* Navigation bar links */
    .navbar a {
      float: left;
      display: block;
      color: white;
      text-align: center;
      padding: 14px 20px;
      text-decoration: none;
    }

    /* Change color on hover */
    .navbar a:hover {
      background-color: #ddd;
      color: black;
    }

    table {
      width: 80%;
      margin: 20px auto;
      border-collapse: collapse;
    }

    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #333;
      color: white;
    }

    tr:hover {
      background-color: #f5f5f5;
    }

    h1 {
      text-align: center;
      color: #333;
    }
    
    button {
      background: #007bff;
      color: white;
      padding: 10px 15px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin-top: 10px;
    }

    .createUserButton {
      width: 80%;
      margin: 20px auto;
    }

    .deleteButton {
      background: #dc3545;
      color: white;
      padding: 10px 15px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin-top: 10px;
    }
  </style>
</head>
<body>

  <!-- Navigation bar -->
  <div class="navbar">
    <a href="/users/view">Users Home</a>
    <a href="view">Cars Home</a>
  </div>

  <h1>{{message}}</h1>
  {{!-- create user button --}}
  <div class="createUserButton"> 
  <button onclick="window.location.href = 'create';">Add Car</button>
  </div>
   <!-- Cars Table -->
  <table>
    <thead>
      <tr>
        <th>Make</th>
        <th>Model</th>
        <th>Year</th>
        <th>Price Per Day</th>
        <th>Availability Status</th>
        <th>Description</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each cars}}
        <tr>
          <td>{{this.make}}</td>
            <td>{{this.model}}</td>
            <td>{{this.year}}</td>
            <td>{{this.pricePerDay}}</td>
            <td>{{this.availabilityStatus}}</td>
            <td>{{this.description}}</td>
            <td>
            <button onclick="window.location.href = 'update/{{this.id}}';">Edit</button>
            </td>
            <td>
            <button class="deleteButton" onclick="deleteCar('{{this.id}}')">Delete</button>
            </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <script>
  function deleteCar(carId) {
    if (confirm('Are you sure you want to delete this car?')) {
      window.location.href = `/cars/delete/${carId}`;
    }
  }
</script>
</body>
</html>
